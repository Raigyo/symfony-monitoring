{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
<div class="row">
  <div class="col-md-4 col md offset-4">
    <div class="panel-heading">
      <h3 class="panel-title">
        Connexion
      </h3>
    </div>
    <div class="panel-body">
      <form action="{{ path('login') }}" method="POST">
        <div class="row">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Email" name="_username">
          </div>
          <div class="form-group">
            <input type="text" class="my-4 form-control" placeholder="Mot de passe" name="_password">
          </div>
        </div>
        <button class="btn btn-lg btn-success btn-lock">
        <i class="fas fa-unlock"></i>
        Me connecter
        </button>
        {% if error %}
          <div class="mt-5 alert alert-warning text-center">
            <p>Mauvais login ou password!</p>
          </div>
        {% endif %}
      </form>
    </div>
  </div>
</div>

</div>

{% endblock %}